<Window x:Class="NewDiag"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="New.." Height="252" Width="447" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Icon="/Budgie%20Files;component/new.png">
    <Grid>
        <TabControl>
            <TabItem Header="File">
                <StackPanel HorizontalAlignment="Stretch">
                    <DockPanel>
                        <Label DockPanel.Dock="Left">Name</Label>
                        <TextBox Height="24" Name="FileName"></TextBox>
                    </DockPanel>
                    <Label>Content</Label>
                    <TextBox AcceptsTab="True" AcceptsReturn="True" Height="100" Name="flcnt" TextWrapping="Wrap"></TextBox>
                    <Button Name="CrtBtnFl">Create</Button>
                </StackPanel>
            </TabItem>
            <TabItem Header="Directory">
                <StackPanel HorizontalAlignment="Stretch">
                    <DockPanel>
                        <Label DockPanel.Dock="Left">Name</Label>
                        <TextBox Height="24" Name="DirName"></TextBox>
                    </DockPanel>
                    <Button Name="CrtBtnDr">Create</Button>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
